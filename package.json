    "plugin",
    "hmr",
    "hot-reload",
    "test",
    "tests",
    "backend",
    "server"
  ],
  "author": "vladislao <netcemetry@yandex.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Vladislao/mocha-hot-webpack-plugin/issues"
  },
  "homepage": "https://github.com/Vladislao/mocha-hot-webpack-plugin#readme",
  "dependencies": {
    "mocha": "3.5.0"
  },
  "devDependencies": {
    "casual": "1.5.17",
    "chai": "4.1.1",
    "chai-spies": "0.7.1",
    "cross-env": "5.0.5",
    "eslint": "4.5.0",
    "eslint-config-airbnb": "15.1.0",
